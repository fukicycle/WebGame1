@page "/"

<PageTitle>Index</PageTitle>
<div class="container">
    <div class="game-area">
        <img src="car.png" class="car" style="top:@(x)px;left:@(y)px;" />
    </div>
</div>
@code{
    int x = 0;
    int y = 0;
    System.Timers.Timer timer = new System.Timers.Timer(20);
    protected override void OnInitialized()
    {
        timer.Elapsed += (s, e) =>
        {
            x += 1;
            if (x >= 500)
            {
                x = 0;
            }
            StateHasChanged();
        };
        timer.Start();
    }
}
